<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.joane14.myapplication.Fragments.AboutProfFrag">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


                <android.support.v7.widget.CardView
                    android:id="@+id/card_view"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@color/cardview_light_background"
                    card_view:cardCornerRadius="10dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true"
                    card_view:contentPadding="10dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:id="@+id/phoneLL"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/profRating"
                                android:layout_width="200dp"
                                android:layout_height="match_parent" />

                            <TextView
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:text="Rating"
                                android:textColor="@color/colorLightOrange"
                                android:textStyle="italic" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imageView12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:srcCompat="@android:drawable/btn_star_big_on" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/card_view"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@color/cardview_light_background"
                    card_view:cardCornerRadius="10dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true"
                    card_view:contentPadding="10dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/phoneLL"
                            android:layout_marginLeft="15dp">

                            <TextView
                                android:id="@+id/profPhone"
                                android:layout_width="200dp"
                                android:layout_height="match_parent" />

                            <TextView
                                android:id="@+id/textView12"
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:text="Mobile Phone"
                                android:textColor="@color/colorLightOrange"
                                android:textStyle="italic" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:srcCompat="@android:drawable/stat_sys_phone_call"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@color/cardview_light_background"
                    card_view:cardCornerRadius="10dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true"
                    card_view:contentPadding="10dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="15dp">

                            <TextView
                                android:id="@+id/profBirthDate"
                                android:layout_width="200dp"
                                android:layout_height="match_parent" />

                            <TextView
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:text="Birth Date"
                                android:textColor="@color/colorLightOrange"
                                android:textStyle="italic" />
                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@color/cardview_light_background"
                    card_view:cardCornerRadius="10dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true"
                    card_view:contentPadding="10dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/phoneLL"
                            android:layout_marginLeft="15dp">

                            <TextView
                                android:id="@+id/profAddress"
                                android:layout_width="200dp"
                                android:layout_height="match_parent" />

                            <TextView
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:text="Address"
                                android:textColor="@color/colorLightOrange"
                                android:textStyle="italic" />
                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <FrameLayout
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/fragment_container_userReview"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"/>
        </LinearLayout>
</ScrollView>

    </RelativeLayout>

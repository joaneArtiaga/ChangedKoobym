<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.joane14.myapplication.Fragments.AboutProfFrag">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/phoneLL"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:text="Rating"
                        android:textColor="@color/colorLightOrange"
                        android:textStyle="italic" />

                    <!--<TextView-->
                        <!--android:id="@+id/profRating"-->
                        <!--android:layout_width="200dp"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:textColor="@color/colorOrange" />-->

                    <RatingBar
                        android:id="@+id/profRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:stepSize="0.2"
                        android:theme="@style/RatingBar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:progressTint="@color/colorLightOrange"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/phoneLL"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:text="Mobile Phone"
                        android:textColor="@color/colorLightOrange"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/profPhone"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/colorOrange" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:text="Birth Date"
                        android:textColor="@color/colorLightOrange"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/profBirthDate"
                        android:layout_width="200dp"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/phoneLL"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:text="Address"
                        android:textColor="@color/colorLightOrange"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/profAddress"
                        android:layout_width="200dp"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:padding="10dp">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:text="Meet Up"
                    android:textColor="@color/colorLightOrange"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:text="Location"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorLightOrange"
                    android:textStyle="italic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/location1"/>

                    <TextView
                        android:id="@+id/loc1"
                        android:layout_width="340dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/location1"/>

                    <TextView
                        android:id="@+id/loc2"
                        android:layout_width="340dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/location1"/>

                    <TextView
                        android:id="@+id/loc3"
                        android:layout_width="340dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/fragment_container_userReview"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>

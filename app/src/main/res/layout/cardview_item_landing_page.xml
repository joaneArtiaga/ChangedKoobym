<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp">


    <ImageView
        android:id="@+id/displayBookPic"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="110dp"
        android:layout_alignBottom="@+id/displayBookPic"
        android:layout_alignTop="@+id/displayBookPic"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/displayBookPic"
        android:layout_toEndOf="@+id/displayBookPic">

        <TextView
            android:id="@+id/lpBookTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorOrange"/>

        <TextView
            android:id="@+id/lpAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Author"
            android:textSize="20sp"
            android:textStyle="italic"
            android:textColor="@color/colorDark"/>

        <TextView
            android:id="@+id/lpBookPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Price"
            android:textSize="20sp"
            android:textColor="@color/colorDark"/>

    </LinearLayout>
</RelativeLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.joane14.myapplication.Fragments.ToReceive">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rent   "
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold|italic"
                    android:gravity="right"
                    android:background="@color/colorRent"
                    android:layout_marginRight="15dp"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/toReceiveRent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Swap   "
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:textStyle="bold|italic"
                    android:gravity="right"
                    android:background="@color/colorSwap"
                    android:layout_marginRight="15dp"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/toReceiveSwap"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Auction   "
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold|italic"
                    android:gravity="right"
                    android:background="@color/colorAuction"
                    android:layout_marginRight="15dp"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/toReceiveAuction"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>

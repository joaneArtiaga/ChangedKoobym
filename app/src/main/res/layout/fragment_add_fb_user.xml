<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDark"
    tools:context="com.example.joane14.myapplication.Fragments.AddFbUser"
    android:padding="5dp">


    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnNextAdd"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="80dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorDark"
            android:orientation="vertical"
            android:padding="10dp">


            <ImageView
                android:id="@+id/displayPic"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:clickable="true"
                app:srcCompat="@mipmap/ic_launcher" />

            <EditText
                android:id="@+id/firstName"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_edittext"
                android:backgroundTint="#f0aaa0"
                android:gravity="center"
                android:hint="First Name"
                android:inputType="text"
                android:textSize="15sp" />


            <EditText
                android:id="@+id/lastName"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_edittext"
                android:backgroundTint="#f0aaa0"
                android:gravity="center"
                android:hint="Last Name"
                android:inputType="text"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/username"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_edittext"
                android:backgroundTint="#f0aaa0"
                android:gravity="center"
                android:hint="Username"
                android:inputType="text"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/address"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_edittext"
                android:backgroundTint="#f0aaa0"
                android:gravity="center"
                android:hint="Address"
                android:inputType="text"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_edittext"
                android:backgroundTint="#f0aaa0"
                android:gravity="center"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/birthDate"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_edittext"
                android:backgroundTint="#f0aaa0"
                android:clickable="true"
                android:focusable="false"
                android:gravity="center"
                android:hint="Birth Date (YYYY-MM-DD)"
                android:inputType="datetime"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/contactNumber"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_edittext"
                android:backgroundTint="#f0aaa0"
                android:gravity="center"
                android:hint="Contact number"
                android:inputType="phone"
                android:textSize="15sp" />

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btnNextAdd"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="5dp"
        android:background="#d8e1dc"
        android:text="Create Account"
        android:textColor="@color/colorDark"
        android:padding="5dp"/>

</RelativeLayout>

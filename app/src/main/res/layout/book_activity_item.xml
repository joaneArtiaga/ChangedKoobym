<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginTop="10dp"
    android:background="@color/cardview_light_background">


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/ivBookBA"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date Here"
                android:id="@+id/dateBA"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:textSize="20dp"
                android:textColor="@color/colorLightOrange"
                android:textStyle="bold|italic"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book Title"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/colorLightOrange"
                        android:id="@+id/bookTitleBA"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Renter Name"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:id="@+id/renterNameBA"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book Date"
                        android:layout_marginBottom="5dp"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:id="@+id/bookDateBA"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚±"
                        android:layout_marginBottom="5dp"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:id="@+id/bookPriceBA"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"
                        android:textSize="13dp"
                        android:id="@+id/locationBA"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Time"
                        android:textStyle="bold"
                        android:textSize="13dp"
                        android:id="@+id/timeBA"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageButton
                        android:id="@+id/profileBA"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@null"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:src="@drawable/profile1"/>

                    <ImageButton
                        android:id="@+id/notifyBA"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@null"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/sendmail"/>

                    <ImageButton
                        android:id="@+id/rateButtonBA"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@null"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/notrate"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
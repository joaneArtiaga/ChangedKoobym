<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.joane14.myapplication.Activities.RequestActivity"
    tools:showIn="@layout/app_bar_book_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageButton
                android:id="@+id/rentRequest"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/frent" />

            <TextView
                android:id="@+id/tvRentRequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Rent"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorDark"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="5dp">

            <ImageButton
                android:id="@+id/swapRequest"
                android:layout_gravity="center_horizontal"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:background="@null"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/fswap"/>

            <TextView
                android:id="@+id/tvSwapRequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:text="Swap"
                android:textColor="@color/colorDark"/>

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
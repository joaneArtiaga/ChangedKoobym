<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFF"
    android:orientation="vertical"
    android:padding="10dp">


    <ImageView
        android:id="@+id/displayBookPic"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@mipmap/ic_launcher" />


    <TextView
        android:id="@+id/lpBookTitle"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:lines="2"
        android:text="Book Title"
        android:textColor="@color/colorLightOrange"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lpAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:lines="2"
        android:text="Book Author"
        android:textColor="@color/colorLightOrange"
        android:textSize="14sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/lpSwapPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:lines="2"
        android:text="Book Author"
        android:textColor="@color/colorLightOrange"
        android:textSize="14sp"
        android:textStyle="italic" />

    <RatingBar
        android:id="@+id/rating_bookRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:isIndicator="true"
        android:numStars="5"
        android:stepSize="0.2"
        android:theme="@style/RatingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:progressTint="@color/colorLightOrange"/>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/status_ll"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/ratingStatusBook"/>

    </LinearLayout>

</LinearLayout>
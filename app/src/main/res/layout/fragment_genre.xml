<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.joane14.myapplication.Fragments.Genre"
    android:background="@color/colorDark">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Choose Favorite Genre:"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/btnNext"
        android:foregroundGravity="center_horizontal"/>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="193dp"
        android:layout_height="400dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="bottom"
        android:background="@color/colorDark"
        android:orientation="vertical">

        <TextView
            android:clickable="true"
            android:id="@+id/genre_sciFi"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/label_bg"
            android:gravity="center"
            android:text="Sci-Fi"
            android:textColor="@color/colorDark" />

        <TextView
            android:clickable="true"
            android:id="@+id/genre_adventure"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/label_bg"
            android:gravity="center"
            android:text="Adventure"
            android:textColor="@color/colorDark" />

        <TextView
            android:clickable="true"
            android:id="@+id/genre_romance"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/label_bg"
            android:gravity="center"
            android:text="Romance"
            android:textColor="@color/colorDark" />

        <TextView
            android:id="@+id/genre_horror"
            android:layout_width="90dp"
            android:clickable="true"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/label_bg"
            android:gravity="center"
            android:text="Horror"
            android:textColor="@color/colorDark" />

        <TextView
            android:id="@+id/genre_health"
            android:clickable="true"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/label_bg"
            android:gravity="center"
            android:text="Health"
            android:textColor="@color/colorDark" />

        <TextView
            android:id="@+id/genre_travel"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:clickable="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/label_bg"
            android:gravity="center"
            android:text="Travel"
            android:textColor="@color/colorDark" />

        <TextView
            android:clickable="true"
            android:id="@+id/genre_religion"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/label_bg"
            android:gravity="center"
            android:text="Religion"
            android:textColor="@color/colorDark" />

        <TextView
            android:id="@+id/genre_cook"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:clickable="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/label_bg"
            android:gravity="center"
            android:text="Cook"
            android:textColor="@color/colorDark" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="192dp"
        android:layout_height="400dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/colorDark"
        android:orientation="vertical">

        <TextView
            android:id="@+id/genre_drama"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/label_bg"
            android:gravity="center"
            android:text="Drama"
            android:textColor="@color/colorDark" />

        <TextView
            android:id="@+id/genre_action"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/label_bg"
            android:gravity="center"
            android:text="Action"
            android:textColor="@color/colorDark" />

        <TextView
            android:id="@+id/genre_mystery"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/label_bg"
            android:gravity="center"
            android:text="Mystery"
            android:textColor="@color/colorDark" />

        <TextView
            android:id="@+id/genre_self_help"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/label_bg"
            android:gravity="center"
            android:text="Self-Help"
            android:textColor="@color/colorDark" />

        <TextView
            android:id="@+id/genre_guide"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/label_bg"
            android:gravity="center"
            android:text="Guide"
            android:textColor="@color/colorDark" />

        <TextView
            android:id="@+id/genre_children"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/label_bg"
            android:gravity="center"
            android:text="Children"
            android:textColor="@color/colorDark" />

        <TextView
            android:id="@+id/genre_comics"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/label_bg"
            android:gravity="center"
            android:text="Comics"
            android:textColor="@color/colorDark" />

        <TextView
            android:id="@+id/genre_biography"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/label_bg"
            android:gravity="center"
            android:text="Biography"
            android:textColor="@color/colorDark" />

    </LinearLayout>

    <ImageView
        android:clickable="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/btnNext"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/next" />

</RelativeLayout>

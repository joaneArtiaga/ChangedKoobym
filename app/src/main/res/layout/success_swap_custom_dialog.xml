<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Success Swap"
            android:textSize="25dp"
            android:textColor="@color/colorLightOrange"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:id="@+id/successBook"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Book Title"
                    android:textColor="@color/colorLightOrange"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:id="@+id/successBookTitle"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivered by:"
                        android:textSize="15dp"
                        android:layout_marginRight="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anonymous"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorOrange"
                        android:id="@+id/successBookOwner"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Received by:"
                android:textSize="15dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anonymous"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/colorOrange"
                android:id="@+id/requestor"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Requestor's books:"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorLightOrange"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

        <ListView
            android:id="@+id/listSwap"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:id="@+id/btnOkaySuccess"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:textColor="@color/colorWhite"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_button"
                android:text="Okay" />

            <Button
                android:id="@+id/btnSeeRating"
                android:text="See Rating"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:textColor="@color/colorWhite"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_button"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
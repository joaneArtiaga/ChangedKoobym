<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTuftBrush"
    tools:context="com.example.joane14.myapplication.Fragments.ProfileFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="270dp"
        android:layout_height="170dp"
        android:orientation="vertical"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp"
        android:layout_alignBottom="@+id/btnAdd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp">

    </LinearLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnAdd"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:clickable="true"
        app:backgroundTint="@color/com_facebook_button_background_color_pressed"
        app:fabSize="normal"
        app:srcCompat="@android:drawable/ic_menu_add"
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp" />

    <ImageView
        android:id="@+id/profileDisplayPic"
        android:layout_width="100dp"
        android:layout_height="155dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:textColor="@color/com_facebook_button_background_color_pressed"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/profileDisplayPic"
        android:layout_alignRight="@+id/profileDisplayPic"
        android:layout_alignEnd="@+id/profileDisplayPic"
        android:layout_marginTop="17dp" />

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textColor="@color/colorDark"
        android:textSize="20sp"
        android:layout_below="@+id/tvName"
        android:layout_marginTop="25dp"
        android:layout_alignRight="@+id/tvName"
        android:layout_alignEnd="@+id/tvName" />

    <TextView
        android:id="@+id/btnEditProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="Edit Profile"
        android:textColor="@color/colorDark"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/tvAddress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvBirthDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Birth Date"
        android:textColor="@color/colorDark"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvEmailProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:textColor="@color/colorDark"
        android:textSize="20sp"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/tvBirthDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textColor="@color/colorDark"
        android:textSize="20sp"
        android:layout_below="@+id/tvEmailProfile"
        android:layout_alignLeft="@+id/tvEmailProfile"
        android:layout_alignStart="@+id/tvEmailProfile"
        android:layout_marginTop="54dp" />


</RelativeLayout>

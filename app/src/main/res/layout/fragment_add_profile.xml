<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDark"
    tools:context="com.example.joane14.myapplication.Fragments.AddProfile">

    <!--<ImageView-->
        <!--android:id="@+id/btnNext"-->
        <!--android:layout_width="50dp"-->
        <!--android:layout_height="50dp"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_marginRight="5dp"-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:clickable="true"-->
        <!--app:srcCompat="@drawable/next" />-->


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">


            <ImageView
                android:id="@+id/displayPic"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:clickable="true"
                app:srcCompat="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="First Name:"
                    android:textColor="@color/colorLightOrange"/>


                <EditText
                    android:id="@+id/firstName"
                    android:layout_width="180dp"
                    android:layout_height="25dp"
                    android:background="@drawable/rounded_edittext"
                    android:hint="First Name"
                    android:paddingLeft="5dp"
                    android:inputType="text"
                    android:textSize="15sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_gravity="left"
                    android:layout_height="wrap_content"
                    android:text="Last Name:"
                    android:textColor="@color/colorLightOrange"/>


                <EditText
                    android:id="@+id/lastName"
                    android:layout_width="180dp"
                    android:layout_height="25dp"
                    android:paddingLeft="5dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_edittext"
                    android:hint="Last Name"
                    android:inputType="text"
                    android:textSize="15sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Username:"
                    android:textColor="@color/colorLightOrange"/>


                <EditText
                    android:id="@+id/username"
                    android:layout_width="180dp"
                    android:paddingLeft="5dp"
                    android:layout_height="25dp"
                    android:background="@drawable/rounded_edittext"
                    android:hint="Username"
                    android:inputType="text"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Address:"
                    android:textColor="@color/colorLightOrange"/>

                <AutoCompleteTextView
                    android:id="@+id/address"
                    android:layout_width="180dp"
                    android:layout_height="25dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/rounded_edittext"
                    android:hint="Address"
                    android:inputType="text"
                    android:textSize="15sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:layout_gravity="left"
                    android:textColor="@color/colorLightOrange"/>

                <EditText
                    android:id="@+id/email"
                    android:layout_width="180dp"
                    android:layout_height="25dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/rounded_edittext"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Birthdate:"
                    android:textColor="@color/colorLightOrange"/>

                <EditText
                    android:id="@+id/birthDate"
                    android:layout_width="180dp"
                    android:layout_height="25dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/rounded_edittext"
                    android:clickable="true"
                    android:focusable="false"
                    android:gravity="center"
                    android:hint="Birth Date (YYYY-MM-DD)"
                    android:inputType="datetime"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Contact Number:"
                    android:layout_gravity="left"
                    android:textColor="@color/colorLightOrange"/>

                <EditText
                    android:id="@+id/contactNumber"
                    android:layout_width="180dp"
                    android:layout_height="25dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/rounded_edittext"
                    android:hint="Contact number"
                    android:inputType="phone"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Password:"
                    android:layout_gravity="left"
                    android:textColor="@color/colorLightOrange"/>

                <EditText
                    android:id="@+id/password"
                    android:layout_width="180dp"
                    android:layout_height="25dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/rounded_edittext"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_gravity="left"
                    android:layout_height="wrap_content"
                    android:text="Confirm Password:"
                    android:textColor="@color/colorLightOrange"/>

                <EditText
                    android:id="@+id/confirmPassword"
                    android:layout_width="180dp"
                    android:paddingLeft="5dp"
                    android:layout_height="25dp"
                    android:background="@drawable/rounded_edittext"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:textSize="15sp" />
            </LinearLayout>


            <Button
                android:id="@+id/btnNextAdd"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="15dp"
                android:background="#d8e1dc"
                android:backgroundTint="@color/colorLightOrange"
                android:text="Create Account"
                android:textColor="@color/colorDark" />

        </LinearLayout>

    </ScrollView>
</RelativeLayout>
